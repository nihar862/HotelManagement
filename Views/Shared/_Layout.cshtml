<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hotel Manage</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Hotel Management", "Home", "Userdatas", new { area = "" }, new { @class = "navbar-brand" , @style = " color : white; " })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="margin-left:30%">
                    <li>@Html.ActionLink("About", "About", "Userdatas", null, new { @style = " color : #00ccff;" })</li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Manage Hotel", "Index", "Hotel_Data", null, new { @style = " color : #00ccff;" })</li>
                            <li>@Html.ActionLink("Confirm Bookings", "ConfirmBooking", "RoomData", null, new { @style = " color : #00ccff;" })</li>
                        }
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (Session["id"] != "2")
                        {
                        <li>@Html.ActionLink("My Bookings", "MyBookings", "RoomData", null, new { @style = " color : #00ccff;" })</li>
                        }
                        <li>@Html.ActionLink("Logout", "Logout", "Account", null, new { @style = " color : #00ccff;" })</li>
                        <li style=" color : white;margin-top:15px;">Welcome, @Session["name"]</li>
                    }

                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hotel Management</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>